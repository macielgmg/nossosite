@model MeuSiteLogin.Models.Usuario

@{
    ViewData["Title"] = "Dashboard";
}

<div class="container mt-5">
    <h2 class="mb-4">Bem-vindo, @Model.Nome!</h2>

    <div class="card shadow-sm" style="max-width: 400px;">
        <div class="card-body">
            <h5 class="card-title">Informações da Conta</h5>
            <p class="card-text"><strong>Usuário:</strong> @Model.UsuarioLogin</p>
            <p class="card-text"><strong>Email:</strong> @Model.Email</p>
            <p class="card-text"><strong>Créditos:</strong> <span class="badge bg-success">@Model.Creditos</span></p>
        </div>
    </div>
</div>
