@{
    Layout = null;
    var usuarioLogado = Context.Session.GetInt32("UsuarioId");
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Meu Site - Transcrições com IA</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }
    </style>
</head>
<body class="bg-slate-50 text-slate-800">
    <div class="w-full">
        <header class="bg-white/90 fixed top-0 left-0 right-0 z-50 shadow-sm backdrop-blur-md">
            <nav class="mx-auto flex max-w-7xl items-center justify-between p-6 lg:px-8" aria-label="Global">
                <div class="flex lg:flex-1">
                    <a href="#" class="-m-1.5 p-1.5">
                        <span class="text-2xl font-bold text-indigo-600">MeuSiteLogin</span>
                    </a>
                </div>
                <div class="hidden lg:flex lg:gap-x-12">
                    <a href="#projeto" class="text-sm font-semibold leading-6 text-slate-700 hover:text-indigo-600 transition-colors">O Projeto</a>
                    <a href="#demo" class="text-sm font-semibold leading-6 text-slate-700 hover:text-indigo-600 transition-colors">Demonstração</a>
                    <a href="#precos" class="text-sm font-semibold leading-6 text-slate-700 hover:text-indigo-600 transition-colors">Preços</a>
                </div>
                <div class="hidden lg:flex lg:flex-1 lg:justify-end lg:items-center lg:gap-x-6">
                    @if (usuarioLogado != null)
                    {
                        <a href="/Dashboard" class="text-sm font-semibold leading-6 text-slate-700 hover:text-indigo-600 transition-colors">Abrir App →</a>
                    }
                    else
                    {
                        <a href="/Login" class="text-sm font-semibold leading-6 text-slate-700 hover:text-indigo-600 transition-colors">Login</a>
                    }
                    <a href="/Cadastro" class="rounded-md bg-indigo-600 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 transition-colors">
                        Começar grátis
                    </a>
                </div>
                <div class="flex lg:hidden">
                    <button type="button" class="-m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-gray-700">
                        <span class="sr-only">Abrir menu principal</span>
                        <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
                        </svg>
                    </button>
                </div>
            </nav>
        </header>

        <main>
            <div class="relative isolate px-6 pt-14 lg:px-8">
                <div class="mx-auto max-w-3xl py-32 sm:py-48 lg:py-56">
                    <div class="text-center">
                        <h1 class="text-4xl font-extrabold tracking-tight text-slate-900 sm:text-6xl">
                            Crie Transcrições Precisas com <span class="text-indigo-600">Inteligência Artificial</span>
                        </h1>
                        <p class="mt-6 text-lg leading-8 text-slate-600">
                            Automatize gravações, gere resumos e extraia insights com um clique. A ferramenta ideal para suas reuniões, podcasts, aulas e muito mais.
                        </p>
                        <div class="mt-10 flex items-center justify-center gap-x-6">
                            <a href="/Cadastro" class="rounded-md bg-indigo-600 px-5 py-3 text-base font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 transition-all duration-300 transform hover:scale-105">
                                Começar agora
                            </a>
                            <a href="#demo" class="text-base font-semibold leading-6 text-slate-900 group">
                                Ver demonstração <span aria-hidden="true" class="transition-transform group-hover:translate-x-1">→</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <script src="~/js/loader.js"></script>
</body>
</html>