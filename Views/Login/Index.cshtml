@{
    Layout = null;
    var usuarioLogado = Context.Session.GetInt32("UsuarioId");
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - Meu Site</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gradient-to-br from-purple-600 via-purple-500 to-purple-700 text-white">
    <header class="w-full fixed top-0 bg-purple-900 bg-opacity-90 border-b border-purple-800 z-50">
        <div class="max-w-6xl mx-auto px-6 py-4 flex items-center justify-between">
            <div class="text-xl font-bold text-white">MeuSiteLogin</div>
            <nav class="hidden md:flex space-x-8 ml-20">
                <a href="#projeto" class="text-white hover:text-gray-200 transition">O Projeto</a>
                <a href="#demo" class="text-white hover:text-gray-200 transition">Demonstração</a>
            </nav>
            <div class="space-x-4">
                @if (usuarioLogado != null)
                {
                    <a href="/Dashboard" class="text-white font-medium hover:text-gray-300 transition">Abrir aplicação</a>
                }
                else
                {
                    <a href="/Login" class="text-white font-medium hover:text-gray-300 transition">Login</a>
                }
                <a href="#" class="px-4 py-2 bg-black text-white rounded-full font-medium hover:bg-gray-800 transition">
                    Começar grátis
                </a>
            </div>
        </div>
    </header>

    <main class="pt-28 flex items-center justify-center min-h-screen px-6">
        <div class="bg-purple-800 bg-opacity-30 p-8 rounded-lg shadow-md w-full max-w-md">
            <h2 class="text-3xl font-bold mb-6 text-center">Login</h2>

            <form method="post" class="space-y-4">
                <div>
                    <label class="block text-sm font-medium mb-1">Usuário:</label>
                    <input type="text" name="usuario" required
                        class="w-full px-4 py-2 rounded bg-purple-900 bg-opacity-60 text-white border border-purple-700 focus:outline-none focus:ring-2 focus:ring-white" />
                </div>

                <div>
                    <label class="block text-sm font-medium mb-1">Senha:</label>
                    <input type="password" name="senha" required
                        class="w-full px-4 py-2 rounded bg-purple-900 bg-opacity-60 text-white border border-purple-700 focus:outline-none focus:ring-2 focus:ring-white" />
                </div>

                <button type="submit"
                    class="w-full px-4 py-2 bg-black rounded-full font-medium hover:bg-gray-800 transition">
                    Entrar
                </button>
            </form>

            @if (ViewBag.Erro != null)
            {
                <p class="mt-4 text-red-300 font-semibold text-center">@ViewBag.Erro</p>
            }
        </div>
    </main>
</body>

<script src="~/js/loader.js"></script>

</html>
