@{
    Layout = null;
    var usuarioLogado = Context.Session.GetInt32("UsuarioId");
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - Meu Site</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }
    </style>
</head>
<body class="bg-slate-50">

    <main class="flex flex-col items-center justify-center min-h-screen px-4">
        
        <div class="w-full max-w-md">
            <div class="text-center mb-8">
                <a href="/" class="text-3xl font-bold text-indigo-600">MeuSiteLogin</a>
                <h2 class="mt-4 text-3xl font-bold text-slate-900">
                    Acesse sua conta
                </h2>
                <p class="mt-2 text-sm text-slate-600">
                    Bem-vindo de volta! Por favor, insira seus detalhes.
                </p>
            </div>

            <div class="bg-white p-8 rounded-2xl shadow-lg">
                <form method="post" class="space-y-6">
                    <div>
                        <label for="usuario" class="block text-sm font-medium text-slate-700">Usuário ou Email</label>
                        <div class="mt-1 relative">
                             <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <svg class="h-5 w-5 text-slate-400" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M19 21v-2a4 4 0 0 0-4-4H9a4 4 0 0 0-4 4v2"/><circle cx="12" cy="7" r="4"/></svg>
                            </div>
                            <input type="text" id="usuario" name="usuario" required
                                   class="w-full pl-10 pr-3 py-2.5 border border-slate-300 rounded-lg text-slate-900 placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition"
                                   placeholder="seuemail@exemplo.com" />
                        </div>
                    </div>

                    <div>
                        <label for="senha" class="block text-sm font-medium text-slate-700">Senha</label>
                        <div class="mt-1 relative">
                             <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <svg class="h-5 w-5 text-slate-400" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="11" width="18" height="11" rx="2" ry="2"/><path d="M7 11V7a5 5 0 0 1 10 0v4"/></svg>
                            </div>
                            <input type="password" id="senha" name="senha" required
                                   class="w-full pl-10 pr-3 py-2.5 border border-slate-300 rounded-lg text-slate-900 placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition"
                                   placeholder="••••••••" />
                        </div>
                    </div>

                    <button type="submit"
                            class="w-full px-4 py-3 bg-indigo-600 text-white rounded-lg font-semibold hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-all duration-300 transform hover:scale-105">
                        Entrar
                    </button>
                </form>

                @if (ViewBag.Erro != null)
                {
                    <div class="mt-4 p-3 bg-red-50 border border-red-200 rounded-lg text-center">
                        <p class="text-sm font-medium text-red-700">@ViewBag.Erro</p>
                    </div>
                }

                <p class="mt-8 text-center text-sm text-slate-600">
                    Não tem uma conta?
                    <a href="/Cadastro" class="font-semibold text-indigo-600 hover:text-indigo-500">
                        Comece grátis
                    </a>
                </p>
            </div>
        </div>
    </main>

</body>
</html>