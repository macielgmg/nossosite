@{
    ViewData["Title"] = "Upload de Arquivos";
    var arquivos = ViewBag.Arquivos as List<MeuSiteLogin.Models.Arquivo>;
}

<div class="container mt-5">
    <h2 class="mb-4">Enviar Arquivo</h2>

    <form method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <input type="file" name="arquivo" class="form-control" required />
        </div>
        <button type="submit" class="btn btn-primary">Enviar</button>
    </form>

    <hr class="my-5" />

    <h4>Arquivos Recentes</h4>
    @if (arquivos != null && arquivos.Any())
    {
        <ul class="list-group">
            @foreach (var item in arquivos)
            {
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <a href="@item.Caminho" target="_blank">@item.NomeOriginal</a>
                    <span class="text-muted">@item.DataEnvio.ToString("dd/MM/yyyy HH:mm")</span>
                </li>
            }
        </ul>
    }
    else
    {
        <p class="text-muted">Nenhum arquivo enviado ainda.</p>
    }
</div>
